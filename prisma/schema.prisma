generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String   @id
  myVendorId        String
  myWorkerId        String
  myUserId          String
  workId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  MyUser            MyUser   @relation(fields: [myUserId], references: [id], onDelete: Cascade)
  MyVendor          MyVendor @relation(fields: [myVendorId], references: [id], onDelete: Cascade)
  MyWorker          MyWorker @relation(fields: [myWorkerId], references: [id], onDelete: Cascade)
  Work              Work     @relation(fields: [workId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model MyUser {
  name         String?   @db.VarChar(50)
  mobileNumber String?   @db.VarChar(10)
  profilePhoto String?   @default("")
  work         String[]
  email        String?   @unique
  address      String?   @default("")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  id           String    @id
  password     String    @default("")
  lat          Float?    @default(0.0)
  role         String?
  lng          Float?    @default(0.0)
  Account      Account[]
  Session      Session[]
  Work         Work[]
}

model MyVendor {
  ownerName     String?   @db.VarChar(50)
  mobileNumber  String?   @db.VarChar(10)
  profilePhoto  String?   @default("")
  shopName      String?   @db.VarChar(100)
  shopPhoto     String?   @default("")
  email         String?   @unique @db.VarChar(50)
  password      String?   @default("")
  address       String?   @db.VarChar(255)
  rating        Float?    @default(0)
  bussinessType String?   @default("")
  feedback      String?   @default("")
  gstNumber     String?   @db.VarChar(20)
  age           Int?
  role          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime
  id            String    @id
  lat           Float?    @default(0.0)
  lng           Float?    @default(0.0)
  Account       Account[]
  Session       Session[]
}

model MyWorker {
  name         String?   @db.VarChar(50)
  mobileNumber String?   @db.VarChar(10)
  profilePhoto String?   @default("")
  photo        String?   @default("")
  video        String?   @default("")
  dailyWage    Float?    @default(0)
  address      String?   @db.VarChar(255)
  rating       Float?    @default(0)
  occupation   String?   @default("")
  feedback     String?   @default("")
  pastDeals    String[]
  presentDeals String[]
  age          Int?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  id           String    @id
  email        String    @unique
  password     String    @default("")
  lat          Float?    @default(0.0)
  lng          Float?    @default(0.0)
  role         String?
  Account      Account[]
  Session      Session[]
  Work         Work[]
}

model Session {
  id           String    @id
  sessionToken String    @unique
  myUserId     String?
  myWorkerId   String?
  myVendorId   String?
  workId       String?
  expires      DateTime
  MyUser       MyUser?   @relation(fields: [myUserId], references: [id], onDelete: Cascade)
  MyVendor     MyVendor? @relation(fields: [myVendorId], references: [id], onDelete: Cascade)
  MyWorker     MyWorker? @relation(fields: [myWorkerId], references: [id], onDelete: Cascade)
  Work         Work?     @relation(fields: [workId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Work {
  id              String    @id
  workType        String
  description     String
  photos          String[]
  alternateNumber String?
  workId          String
  createdAt       DateTime  @default(now())
  isActive        Boolean   @default(true)
  lat             Float     @default(0.0)
  lng             Float     @default(0.0)
  myWorkerId      String?
  Account         Account[]
  Session         Session[]
  MyWorker        MyWorker? @relation(fields: [myWorkerId], references: [id])
  MyUser          MyUser    @relation(fields: [workId], references: [id])
}
